            <Font size="14.0" />
         </font>
      </TextField>
      <ComboBox fx:id="question" layoutX="38.0" layoutY="267.0" prefHeight="35.0" prefWidth="388.0" promptText="   Choose Your Security Question" styleClass="field-controller" stylesheets="@../application/application.css" />
      <Button layoutX="110.0" layoutY="433.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" prefHeight="39.0" prefWidth="223.0" styleClass="login-button" stylesheets="@../application/application.css" text="Recover Password">
         <font>
            <Font name="Impact" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
