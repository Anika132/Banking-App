<AnchorPane prefHeight="604.0" prefWidth="443.0" styleClass="main-cont" stylesheets="@../application/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ForgotPassword.ForgotPasswordController">
   <children>
      <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="14.0" layoutY="23.0" onMouseClicked="#backToLogin" size="20.0" text="" />
      <FontAwesomeIconView glyphName="CLOSE" layoutX="418.0" layoutY="22.0" onMouseClicked="#closeApp" size="20.0" styleClass="close-button" />
      <Label layoutX="86.0" layoutY="68.0" prefHeight="37.0" prefWidth="299.0" text="Forgot  Your Password" textFill="#4984af">
         <font>
            <Font name="Impact" size="31.0" />
         </font>
      </Label>
      <Label layoutX="98.0" layoutY="107.0" prefHeight="19.0" prefWidth="299.0" text="Recover your forgotten password here.">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="accountno" layoutX="38.0" layoutY="198.0" prefHeight="37.0" prefWidth="388.0" promptText="  Enter Your Account Number" styleClass="field-controller" stylesheets="@../application/application.css">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="answer" layoutX="42.0" layoutY="328.0" prefHeight="37.0" prefWidth="388.0" promptText="  Answer" styleClass="field-controller" stylesheets="@../application/application.css">
